{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist/server",
    "target": "ES2020",
    "isolatedModules": false,
    "noEmit": false,
    "esModuleInterop": true
  },
  "include": ["server/**/*", "types/**/*"],
  "exclude": ["node_modules", "src", "frontend", "build", "dist"]
}
